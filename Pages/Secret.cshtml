@page
@model SecretModel
@{
    ViewData["Title"] = "Happy Birthday Nowrin!";
}

<style>
    /* Reset */
    * {
        box-sizing: border-box;
    }

    body {
        margin: 0;
        font-family: 'Comic Sans MS', cursive, sans-serif;
        background: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 99%, #fad0c4 100%);
        color: #333;
        overflow-x: hidden;
    }

    /* Sticky header */
    header {
        position: sticky;
        top: 0;
        background: #ff4081;
        padding: 10px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        z-index: 100;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    }

        header nav a {
            color: white;
            font-weight: bold;
            text-decoration: none;
            margin: 0 15px;
            font-size: 1.1rem;
            transition: color 0.3s ease;
            cursor: pointer;
        }

            header nav a:hover {
                color: #fff176;
                text-shadow: 0 0 5px #fff176;
            }

    /* Welcome banner */
    .welcome-banner {
        animation: colorfade 15s ease infinite;
        padding: 50px 20px;
        text-align: center;
        color: white;
        font-size: 3rem;
        font-weight: 900;
        text-shadow: 2px 2px 6px rgba(0,0,0,0.3);
        border-radius: 0 0 40px 40px;
        margin-bottom: 30px;
        background-color: #2196f3;
    }

    @@keyframes colorfade {
        0% {
            background-color: #2196f3;
        }

        25% {
            background-color: #e91e63;
        }

        50% {
            background-color: #ffc107;
        }

        75% {
            background-color: #e91e63;
        }

        100% {
            background-color: #2196f3;
        }
    }

    @@keyframes floatUpEmoji {
        0% {
            transform: translateY(0);
            opacity: 0.6;
        }

        100% {
            transform: translateY(-120vh);
            opacity: 0;
        }
    }

    /* Confetti & balloons container */
    .floaters {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        pointer-events: none;
        overflow: visible;
        z-index: 20;
    }

    .confetti, .balloon {
        position: absolute;
        border-radius: 40%;
        opacity: 0.2;
        pointer-events: none;
        user-select: none;
    }

    .balloon {
        width: 20px;
        height: 30px;
        border-radius: 50% / 60%;
        background: radial-gradient(circle at 20% 30%, #ff4081, #d81b60);
        box-shadow: 0 3px 6px rgba(0,0,0,0.3);
        animation: floatUp linear infinite;
    }

        .balloon.blue {
            background: radial-gradient(circle at 10% 20%, #2196f3, #1565c0);
        }

        .balloon.gold {
            background: radial-gradient(circle at 10% 20%, #ffc107, #ffa000);
        }

    @@keyframes floatUp {
        0% {
            transform: translateY(100vh) translateX(0) rotate(0deg);
        }

        100% {
            transform: translateY(-80vh) translateX(50px) rotate(360deg);
        }
    }

    .confetti {
        width: 10px;
        height: 10px;
        background-color: #ffeb3b;
        box-shadow: 0 0 2px 2px #fff176;
        animation: confettiFall linear infinite;
    }

    @@keyframes confettiFall {
        0% {
            transform: translateY(-10vh) rotate(0deg);
        }

        100% {
            transform: translateY(110vh) rotate(360deg);
        }
    }

    .emoji-floater {
        position: absolute;
        top: 100vh;
        font-size: 2rem;
        opacity: 0.6;
        animation: floatUpEmoji 10s linear infinite;
        pointer-events: none;
        user-select: none;
    }

    /* Layout for message bubbles */
    .message-container {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        justify-content: center;
        padding: 0 10px 40px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .message-bubble {
        background: white;
        border-radius: 30px 30px 30px 0;
        padding: 20px;
        max-width: 250px;
        box-shadow: 0 3px 8px rgba(0,0,0,0.1);
        font-weight: 600;
        font-size: 1.1rem;
        color: #333;
        position: relative;
        transition: transform 0.2s ease;
        cursor: default;
    }

        .message-bubble:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 15px rgba(0,0,0,0.25);
        }

        .message-bubble.pink {
            background: #f48fb1;
            color: white;
            border-radius: 30px 30px 0 30px;
        }

        .message-bubble.blue {
            background: #90caf9;
            color: #0d47a1;
            border-radius: 30px 30px 0 30px;
        }

        .message-bubble.gold {
            background: #ffd54f;
            color: #5d4037;
            border-radius: 30px 0 30px 30px;
        }

    /* Music Player */
    .music-player {
        position: fixed;
        bottom: 10px;
        right: 10px;
        background: #ff4081;
        border-radius: 20px;
        padding: 15px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        display: flex;
        align-items: center;
        gap: 10px;
        z-index: 100;
        color: white;
        font-weight: bold;
        cursor: pointer;
        user-select: none;
        transition: background 0.2s ease;
    }

        .music-player:hover {
            background: #e040fb;
        }

        .music-player button {
            border: none;
            background: transparent;
            color: white;
            font-size: 1.4rem;
            cursor: pointer;
            outline: none;
            transition: transform 0.2s ease;
        }

            .music-player button:hover {
                transform: scale(1.2);
            }

    /* Fortune teller widget */
    #fortune-teller {
        max-width: 400px;
        margin: 40px auto 60px;
        background: #fff9f9;
        border-radius: 20px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        padding: 20px;
        text-align: center;
        font-family: 'Comic Sans MS', cursive, sans-serif;
    }

        #fortune-teller h2 {
            color: #ff4081;
            margin-bottom: 10px;
        }

        #fortune-teller p {
            font-weight: 600;
            margin-bottom: 15px;
        }

        #fortune-teller input[type="text"] {
            padding: 8px 12px;
            border-radius: 12px;
            border: 2px solid #ff4081;
            font-size: 1rem;
            width: 80%;
            max-width: 250px;
            margin-bottom: 15px;
        }

        #fortune-teller button {
            background: #ff4081;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 20px;
            font-weight: bold;
            cursor: pointer;
            transition: background 0.2s ease;
        }

            #fortune-teller button:hover {
                background: #e040fb;
            }

    #fortuneResult {
        margin-top: 20px;
        font-size: 1.2rem;
        font-weight: 700;
        color: #d81b60;
        min-height: 3em;
    }
</style>

